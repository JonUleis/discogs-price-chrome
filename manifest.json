{
  "manifest_version": 3,
  "name": "Discogs Total Price Sorter",
  "version": "2.2",
  "description": "Upgrade the Price column on the Discogs Marketplace to sort by total prices instead of pre-shipping prices!",
  "author": "hi@jonuleis.com",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.discogs.com/*sell/*"]
    },
    {
      "js": ["scripts/shop.js"],
      "matches": ["https://www.discogs.com/*shop/*"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ]
}
